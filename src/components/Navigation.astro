<script>
  (function() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (!toggle || !menu || !menuIcon || !closeIcon) return;

    function toggleMenu() {
      if (!menu || !menuIcon || !closeIcon || !toggle) return;
      
      const isOpen = !menu.classList.contains('hidden');
      
      if (isOpen) {
        // „É°„Éã„É•„Éº„ÇíÈñâ„Åò„Çã
        menu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        toggle.setAttribute('aria-expanded', 'false');
        toggle.setAttribute('aria-label', '„É°„Éã„É•„Éº„ÇíÈñã„Åè');
        document.body.style.overflow = '';
      } else {
        // „É°„Éã„É•„Éº„ÇíÈñã„Åè
        menu.classList.remove('hidden');
        menuIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        toggle.setAttribute('aria-expanded', 'true');
        toggle.setAttribute('aria-label', '„É°„Éã„É•„Éº„ÇíÈñâ„Åò„Çã');
        document.body.style.overflow = 'hidden';
      }
    }

    toggle.addEventListener('click', toggleMenu);

    // „É°„Éã„É•„ÉºÂÜÖ„ÅÆ„É™„É≥„ÇØ„Çí„ÇØ„É™„ÉÉ„ÇØ„Åó„Åü„Çâ„É°„Éã„É•„Éº„ÇíÈñâ„Åò„Çã
    const menuLinks = menu.querySelectorAll('a');
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (menu && menuIcon && closeIcon && toggle) {
          menu.classList.add('hidden');
          menuIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          toggle.setAttribute('aria-expanded', 'false');
          toggle.setAttribute('aria-label', '„É°„Éã„É•„Éº„ÇíÈñã„Åè');
          document.body.style.overflow = '';
        }
      });
    });
  })();
</script>
