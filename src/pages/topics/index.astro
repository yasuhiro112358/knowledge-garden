---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTopics } from '../../utils/markdown';

const topics = await getTopics();
---

<BaseLayout title="トピック一覧">
  <div>
    <h1 class="text-3xl font-bold mb-8">トピック一覧</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {topics.map((topic) => (
        <a
          href={`/topics/${topic.slug}`}
          class="block p-5 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all"
        >
          <h2 class="font-semibold text-lg mb-2">{topic.title}</h2>
          <p class="text-sm text-gray-600 line-clamp-3">
            {topic.content.substring(0, 150)}...
          </p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

