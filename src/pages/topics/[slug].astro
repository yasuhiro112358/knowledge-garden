---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTopic, getTopics } from '../../utils/markdown';
import { renderMarkdown } from '../../utils/markdownRenderer';

export async function getStaticPaths() {
  const topics = await getTopics();
  return topics.map((topic) => ({
    params: { slug: topic.slug },
    props: { topic },
  }));
}

const { topic } = Astro.props;
const htmlContent = renderMarkdown(topic.content);
---

<BaseLayout title={topic.title}>
  <article>
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{topic.title}</h1>
      {topic.data.tags && topic.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {topic.data.tags.map((tag) => (
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <div class="markdown-content" set:html={htmlContent} />
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <a
        href="/topics"
        class="text-blue-600 hover:underline"
      >
        ← トピック一覧に戻る
      </a>
    </footer>
  </article>
</BaseLayout>

