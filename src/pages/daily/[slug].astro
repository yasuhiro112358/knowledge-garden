---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDailyNote, getDailyNotes } from '../../utils/markdown';
import { renderMarkdown } from '../../utils/markdownRenderer';

export async function getStaticPaths() {
  const notes = await getDailyNotes();
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const htmlContent = renderMarkdown(note.content);
---

<BaseLayout title={note.title}>
  <article>
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{note.title}</h1>
      <p class="text-gray-600">{note.date}</p>
    </header>
    <div class="markdown-content" set:html={htmlContent} />
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <a
        href="/daily"
        class="text-blue-600 hover:underline"
      >
        ← 日次ノート一覧に戻る
      </a>
    </footer>
  </article>
</BaseLayout>

